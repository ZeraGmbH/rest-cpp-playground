  "components": {
    "schemas": {
      "RpcRequest": {
        "type": "object",
        "properties": {
          "EntityId": {
            "type": "integer",
            "description": "The Entity Id to request",
            "format": "int32",
            "nullable": false
          },
          "RpcName": {
            "type": "string",
            "description": "The rpc name to execute",
            "nullable": false
          },
          "parameters": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "Key": {
                  "type": "string",
                  "description": "The key of the map entry",
                  "nullable": false
                },
                "Value": {
                  "type": "string",
                  "description": "The value of the map entry",
                  "nullable": false
                }
              }
            }
          },
          "Timeout": {
            "type": "integer",
            "description": "Optional timeout in milliseconds (defaults to 1000)",
            "format": "int32",
            "nullable": true
          }
        }
      },
      "RpcResponse" : {
        "type": "object",
        "properties" : {
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "EntityId": {
            "type": "integer",
            "description": "The requested EntityId",
            "nullable": true
          },
          "RPC_Name": {
            "type": "string",
            "description": "The requested RPC",
            "nullable": true
          },
          "ReturnInformation": {
            "type": "string",
            "description": "The desired return information formated as json",
            "nullable": false
          }
        }

      },
      "VeinGetRequest": {
        "type": "object",
        "properties": {
          "EntityId": {
            "type": "integer",
            "description": "The Entity Id to request",
            "format": "int32",
            "nullable": false
          },
          "ComponentName": {
            "type": "string",
            "description": "The component name to request",
            "nullable": false
          }
        }
      },
      "VeinGetResponse": {
        "type": "object",
        "properties": {
          "ReturnInformation": {
            "type": "string",
            "description": "The desired return information formated as json",
            "nullable": false
          },
          "type": {
            "type": "string",
            "description": "The original data Type",
            "nullable": false
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "EntityId": {
            "type": "integer",
            "description": "The requested EntityId",
            "nullable": true
          },
          "ComponentName": {
            "type": "string",
            "description": "The requested ComponentName",
            "nullable": true
          }
        }
      },
      "VeinSet": {
        "type": "object",
        "properties": {
          "EntityID": {
            "type": "integer",
            "format": "int32",
            "description": "The component ID of the desired information",
            "nullable": false
          },
          "componentName": {
            "type": "string",
            "description": "The component name of the desired information",
            "nullable": false
          },
          "newValue": {
            "type": "string",
            "description": "newValue to set to component",
            "nullable": false
          }
        }
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        }
      }
    }
